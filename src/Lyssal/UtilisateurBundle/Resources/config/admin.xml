<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="lyssal.utilisateur.admin.utilisateur.class">Lyssal\UtilisateurBundle\Admin\UtilisateurAdmin</parameter>
        <parameter key="lyssal.utilisateur.admin.utilisateur_groupe.class">Lyssal\UtilisateurBundle\Admin\UtilisateurGroupeAdmin</parameter>
        <parameter key="lyssal.utilisateur.admin.civilite.class">Lyssal\UtilisateurBundle\Admin\CiviliteAdmin</parameter>
    </parameters>

    <services>
        <service id="lyssal.utilisateur.admin.utilisateur" class="%lyssal.utilisateur.admin.utilisateur.class%">
            <call method="setRouteBuilder">
                <argument type="service" id="sonata.admin.route.path_info_slashes" />
            </call>
            <tag name="sonata.admin" manager_type="orm" group="Utilisateurs" label="Utilisateurs" icon="&lt;i class='fa fa-group'&gt;&lt;/i&gt;" />
            <argument/>
            <argument>%fos_user.model.user.class%</argument>
            <argument>SonataAdminBundle:CRUD</argument>
            <call method="setUserManager">
                <argument type="service" id="fos_user.user_manager" />
            </call>
        </service>
        <service id="lyssal.utilisateur.admin.utilisateur_groupe" class="%lyssal.utilisateur.admin.utilisateur_groupe.class%">
            <tag name="sonata.admin" manager_type="orm" group="Utilisateurs" label="Groupes d'utilisateur" label_translator_strategy="sonata.admin.label.strategy.underscore" />
            <argument />
            <argument>%fos_user.model.group.class%</argument>
            <argument>SonataAdminBundle:CRUD</argument>
            </service>
        <service id="lyssal.utilisateur.admin.civilite" class="%lyssal.utilisateur.admin.civilite.class%">
            <tag name="sonata.admin" manager_type="orm" group="Utilisateurs" label="Titres de civilitÃ©" />
            <argument />
            <argument>%lyssal.utilisateur.entity.civilite.class%</argument>
            <argument>SonataAdminBundle:CRUD</argument>
        </service>
        
        <service id="sonata.user.editable_role_builder" class="Lyssal\UtilisateurBundle\Security\EditableRolesBuilder">
            <argument type="service" id="security.context" />
            <argument type="service" id="sonata.admin.pool" />
            <argument>%security.role_hierarchy.roles%</argument>
            <argument type="service" id="translator" />
        </service>

        <service id="lyssal.utilisateur.form.type.security_roles" class="Lyssal\UtilisateurBundle\Form\Type\SecurityRolesType">
            <tag name="form.type" alias="lyssal_security_roles" />
            <argument type="service" id="sonata.user.editable_role_builder" />
        </service>
    </services>

</container>
